<link rel="stylesheet" type="text/css" href="~/css/styles.css" />

@using Tracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No Vendors have been added yet! Go ahead and add some!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h4><a href='/vendors/@vendor.Id'>@vendor.Name</a></h4>
}

<p><a href='/'>Home Page</a></p>