<link rel="stylesheet" type="text/css" href="~/css/styles.css" />

@using Tracker.Models;

<h3>Below are all the Orders for @Model["vendor"].Name</h3>

<p>Vendor Description: @Model["vendor"].Description</p>

<ul>
@foreach (var order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
}
</ul>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new Order</a></p>
<p><a href='/vendors'>Return to Vendor list</a></p>
<p><a href='/'>Return to Home Page</a></p>